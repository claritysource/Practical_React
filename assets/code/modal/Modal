import React from 'react'
import './Modal.css'

const Modal = React.forwardRef((props, backdropRef) =&gt; {
  return (
    &lt;div className='modal-wrapper'&gt;
      &lt;div ref={backdropRef} className='modal-backdrop'/&gt;

      &lt;div className='modal-box'&gt;
        {props.children}
      &lt;/div&gt;
    &lt;/div&gt;
  )
})

export default Modal